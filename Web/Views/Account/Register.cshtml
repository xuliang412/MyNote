@model Web.Models.RegisterViewModel

@{
    ViewBag.Title = "用户注册";
}

<div class="container" style="padding-top:60px">
    <div class="row">
        <div class="col"></div>
        <div class="col-md-3">
            <h4 class="text-center mb-4">用户注册</h4>
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <label>
                        @Html.DisplayNameFor(x => x.UserName)
                    </label>
                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x =>x.UserName,"",new {@class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>
                        @Html.DisplayNameFor(x => x.Password)
                    </label>
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>
                        确认密码
                    </label>
                    @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
                <buttom class="btn btn-info" id="btnReturn">返回</buttom>
                <input type="submit" value="注册" class="btn btn-primary float-right" />
            }
        </div>
        <div class="col"></div>
    </div>
</div>

<script>
    $(function () {
        $('#btnReturn').click(function () { window.location = '/Account/Login' });
    });
</script>

