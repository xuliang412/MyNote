@model Models.UserEntity.User

@{
    ViewBag.Title = "Login";
}

<div class="container-fluid">
    <div class="row justify-content-md-center" style="padding-top:60px">
        <div class="col"></div>
        <div class="col-md-auto">
            @using (Html.BeginForm("Login","Account"))
            {
                <h4 class="text-center mb-4">用户登录</h4>
                @Html.HiddenFor(x => x.UserId)
                <div class="form-group">
                    <div class="input-group ">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-lg fa-user-o"></i></span>
                        </div>
                        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", placeholder = "用户名" })
                    </div>
                    @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <div class="input-group ">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-lg fa-key"></i></span>
                        </div>
                        @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "密码" })
                    </div>
                    @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                </div>
                <div>
                    @Html.CheckBox("SavaPwd")
                    <label>记住密码</label>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-block" value="登录" />
                    <label class="text-right form-control-plaintext">&copy;2018 - 2019</label>
                </div>
            }
        </div>
        <div class="col"></div>
    </div>
</div>


